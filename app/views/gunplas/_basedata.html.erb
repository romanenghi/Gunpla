
<%= semantic_form_for @gunpla do |form| %>
	<div id ="gunpla-details">
    <%= form.input :code %>
    <%= form.input :description %>
    <%= form.input :longdescription,       :input_html => { :class => 'autogrow', :rows => 10, :cols => 20} %>
    <%= form.input :categories,  :as => :select,      :collection => Category.find(:all) %>
    <%= form.buttons %>
    </div>
<% end %>
<div id='images'>
	<h3>Immagini associate</h3>
	<table id="box-table-a">
	<thead>
		<tr>
			<th scope="col">Foto</th>
		</tr>
	</thead>
	<% @gunpla.images.each do |image|%>
		<tr>
			<td><%= image_tag(image.localpath) %></td>
		</tr>
	<% end %>
	</table>
</div>
	