<div id="headergundamtype">
	<script type="text/javascript">
		$(document).ready(function() {
			<% @gunplatypedescription.each_with_index do |gunplatypedescr,index|%>
			$("<%="#Img#{gunplatypedescr['title'].gsub(" ","").strip}"%>").click(function() {
				$("#content").load('/public/<%= "#{gunplatypedescr['title'].gsub(" ","").strip}.html'"%>);
			});
			<% end %> 
		});
	</script>
	<% @gunplatypedescription.each_with_index do |gunplatypedescr,index|%>
	<%= image_tag(gunplatypedescr['image'], :id => "Img#{gunplatypedescr['title'].gsub(" ","").strip}", :border=>5, :width => 150 ) %>
	<% end %> 
	<div id="content"></div>
</div>
<% @gunplatypedescription.each_with_index do |gunplatypedescr,index|%>
<div id="<%= gunplatypedescr['title'].gsub(" ","").strip%>" class="gunplaype">
	<%= render :partial => "gunpla", :locals => {
	:gunplas => @gunplatypelist[index] ,
	:gunplatype => gunplatypedescr
	} %>
</div>
<% end %> 