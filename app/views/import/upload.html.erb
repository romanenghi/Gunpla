
<%= form_tag({:action => :upload}, :multipart => true) do %>
  <%= file_field_tag 'csv' %>
  <%= submit_tag("Carica") %>
<% end %>

<p>Anteprima del file <b><%= @uploaded_io.original_filename %></b> (prima 15 righe)</p>
<%= form_tag({:action => :parse}) do %>
<table id = "box-table-a">
<tr>
	<td></td>
	<% n = 0 %>
	<% @arr_of_arrs[0].length.times do |header| %>
	<td>
		<%= select_tag "importoption[#{n}]", options_from_collection_for_select(@importoption, "id", "name") %>
	</td>
	<% n= n + 1 %>
    <% end %>
</tr>
<% n = 0 %>
<% @arr_of_arrs.take(15).each do |row| %>
<% n= n + 1 %>
<tr>
	<td>
	<b><%= n %></b>
	</td>
	<% row.each do |cell| %>
	<td>
		<%= cell %>
	</td>
    <% end %>
</tr>
<% end %>
</table>
<%= submit_tag("Carica") %>
<% end %>


